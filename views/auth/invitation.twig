{% extends 'layout.twig' %}

{% block content %}
    <div class="container">

        <form class="form-signin" method="post">
            <h2 class="form-signin-heading">Invitación</h2>

            <div class="form-group {% if errors['inputEmail'] %}has-error{% endif %}">
                <label for="inputEmail" class="sr-only">Email</label>
                <input type="text" id="inputEmail" name="inputEmail" class="form-control" placeholder="Email" autofocus>
            </div>
            {{ generateAlert(errors, 'inputEmail') }}

            <div class="checkbox">
                <label>
                    <input type="checkbox" value="remember-me"> Recuérdame
                </label>
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Pedir Invitación</button>
        </form>

    </div> <!-- /container -->
{% endblock %}